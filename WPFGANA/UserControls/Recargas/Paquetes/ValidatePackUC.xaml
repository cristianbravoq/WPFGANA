        <Label Content=""
               HorizontalAlignment="Center" 
               x:Name="Precio"
               Margin="0,1210,0,0"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"
               Height="82" 
               Width="577" FontSize="65" FontFamily="Yu Gothic UI Semibold" Foreground="#FF3BC750" Background="{x:Null}"/>

        <Image Source="/Images/Recargas/BtnCancelar.png"
                   HorizontalAlignment="Left"
               TouchDown="BtnCancelar_TouchDown"
                   VerticalAlignment="Top" Width="256" Height="75" Margin="259,1500,0,0"/>

        <Image Source="/Images/Recargas/BtnComprar.png"
                   HorizontalAlignment="Left"
               TouchDown="BtnContinue_TouchDown"
