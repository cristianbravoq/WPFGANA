        <Label Content=""
               HorizontalAlignment="Left" 
               x:Name="LblCelular"
               Margin="258,672,0,0"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"
               Height="82" 
               Width="578" FontSize="65" FontFamily="Yu Gothic UI Semibold" Foreground="#FFE7FF0A"/>

